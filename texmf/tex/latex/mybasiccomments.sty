\newcommand{\basiccommentuser}[3]{%pass shorthand, full name, color
\expandafter\newcommand\csname #1mark\endcsname[1]{\hl{##1}}
\expandafter\newcommand\csname #1scolor\endcsname{#3}
\expandafter\newcommand\csname #1bubble\endcsname[2][]{\pdfcomment[author={#2},subject={},color=\csname #1scolor\endcsname,hspace=10pt]{##2}{\color{\csname #1scolor\endcsname}\protect\footnote{\color{\csname #1scolor\endcsname}##2}}}
\expandafter\newcommand\csname #1box\endcsname[2][]{\pdfcomment[author={#2},subject={},color=\csname #1scolor\endcsname,hspace=10pt]{##2}{\color{\csname #1scolor\endcsname}\protect\footnote{\color{\csname #1scolor\endcsname}##2}}}
\expandafter\newcommand\csname #1\endcsname[2][]{\csname #1mark\endcsname{##1}\csname #1bubble\endcsname{##2}}
\expandafter\newcommand\csname #1resp\endcsname[1]{{\color{\csname #1scolor\endcsname}##1}}
}
