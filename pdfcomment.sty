        % 1st part of annotation on 1st page
        \pc@annot@calc@pos%
        \pc@copy@xy@to@anna%
        \renewcommand{\pc@anna@x@two}{\pc@x@right@text}%
        \renewcommand{\pc@anna@x@four}{\pc@x@right@text}%
